@model MyHealthyBlog.Models.Post

@{
    ViewBag.Title = "детайли";
}

<h2>Детайли</h2>

<div>
    <h4>Публикация</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Заглавие
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
           Съдържание
        </dt>

        <dd>
           <textarea class="form-control text-box multiline " disabled="disabled" rows="15">@Model.Body</textarea>
        </dd>

        <dt>
           Дата
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Редакция", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Назад", "Index")
</p>
